# /lib/systemd/system/zrok-frontend.service

[Unit]
Description=zrok frontend service
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=zrok-frontend
Group=zrok-frontend
WorkingDirectory=/var/lib/zrok-frontend
UMask=0007
ExecStart=/usr/bin/zrok-frontend.bash dynamicProxy /etc/zrok/frontend.yml
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
