# /usr/lib/systemd/user/zrok2-agent.service

[Unit]
Description=zrok2 agent user service unit
After=network-online.target

[Service]
Type=simple
UMask=0007
ExecStartPre=/usr/bin/env rm --force %h/.zrok2/agent.socket
ExecStart=/opt/openziti/bin/zrok2 agent start
Restart=always
RestartSec=3

[Install]
WantedBy=default.target
